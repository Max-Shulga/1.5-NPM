{
  "name": "1.5-npm",
  "version": "1.0.0",
  "description": "S++ study repository: 'NPM. Збирачі та інші інструменти.'",
  "main": "index.js",
  "scripts": {
    "dev:assets": "webpack --mode development --watch",
    "dev": "live-server --open=./public/ --host=localhost --watch=./public/",
    "build:assets": "webpack --mode production",
    "build": "set NODE_ENV=production && npm run build:assets && live-server --open=./public/ --host=localhost",
    "build:js": "webpack --mode production",
    "build:css": "sass src/style/main.scss public/style/main.css",
    "lint": "eslint src/js/**/*.js",
    "lint-fix": "eslint --fix src/js/**/*.js",
    "precommit": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "mini-css-extract-plugin": "^2.7.6",
    "moment": "^2.29.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/js/**/*.js": [
      "npm run lint-fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "sass": "^1.69.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
